{
  "extends": "./tsconfig",
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noUnusedLocals": false,
    "experimentalDecorators": true,
    "types": [
      "mocha",
      "chai"
    ]
  },
  "include": [
    "./lib/*.ts",
    "./test/*.ts"
  ],
  "exclude": [
    "./node_modules/**/*.ts"
  ]
}